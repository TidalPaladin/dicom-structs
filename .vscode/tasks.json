{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo fix",
            "type": "shell",
            "command": "cargo",
            "args": ["fix", "--allow-dirty", "--allow-staged"],
            "problemMatcher": ["$rustc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}